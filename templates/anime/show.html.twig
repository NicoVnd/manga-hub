{% extends 'base.html.twig' %}

{% block title %}Anime{% endblock %}

{% block body %}
    <h1>Anime</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ anime.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ anime.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ anime.description }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ anime.note }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ anime.createdAt ? anime.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ anime.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_anime_index') }}">back to list</a>

    <a href="{{ path('app_anime_edit', {'id': anime.id}) }}">edit</a>

    {{ include('anime/_delete_form.html.twig') }}
{% endblock %}
