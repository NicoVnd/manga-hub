{% extends 'base.html.twig' %}

{% block title %}Edit Anime
{% endblock %}

{% block body %}
	<div class="min-h-screen py-12 flex items-center justify-center">
		<div class="container mx-auto px-4 max-w-2xl">
			<div class="bg-slate-800 rounded-3xl shadow-2xl border border-slate-700/50 p-8 md:p-10">
				<div class="mb-8 text-center">
					<h1 class="text-3xl font-black text-white mb-2">Edit Anime</h1>
					<p class="text-slate-400">Update the details of your collection item</p>
				</div>

				{{ include('anime/_form.html.twig', {'button_label': 'Update Anime'}) }}

				<div class="mt-8 pt-6 border-t border-slate-700/50 flex items-center justify-between">
					<a href="{{ path('app_anime_index') }}" class="text-slate-500 hover:text-slate-300 text-sm font-medium transition-colors">
						Back to list
					</a>

					{{ include('anime/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
